<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_5sdp"
    app:cardPreventCornerOverlap="true"
    android:background="@color/white"
    app:cardUseCompatPadding="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:id="@+id/saved_blog_favorite_img"
            android:layout_width="match_parent"
            android:layout_height="237dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/blog_mom"
            android:scaleType="center"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022" />

        <TextView
            android:id="@+id/saved_blog_archive_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_13sdp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@id/saved_blog_favorite_img"
            android:fontFamily="@font/poppins_bold"
            android:text="Blog Title"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/saved_blog_favorite_img"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/saved_blog_favorite_img"
            app:layout_constraintTop_toBottomOf="@+id/saved_blog_favorite_img" />

        <TextView
            android:id="@+id/saved_blog_archive_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_13sdp"
            android:layout_below="@id/saved_blog_archive_title"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/saved_blog_favorite_img"
            android:drawablePadding="2dp"
            android:fontFamily="@font/poppins_regular"
            android:paddingStart="6dp"
            android:paddingBottom="5dp"
            android:text="blod_content"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/saved_blog_favorite_img"
            app:layout_constraintHorizontal_bias="0.678"
            app:layout_constraintStart_toStartOf="@+id/saved_blog_favorite_img"
            app:layout_constraintTop_toBottomOf="@+id/saved_blog_archive_title"
            tools:ignore="SmallSp" />

        <ImageButton
            android:id="@+id/saved_favorite_blog"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/flag_transparent"
            android:src="@drawable/ic_baseline_favorite_border_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/saved_blog_archive_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_baseline_date_range_24"
            android:drawablePadding="2dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="July 03, 2022"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@+id/saved_blog_favorite_img"
            app:layout_constraintTop_toBottomOf="@+id/saved_blog_favorite_img" />

        <TextView
            android:id="@+id/saved_blog_archive_autherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_baseline_supervised_user_circle_24"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Author Name"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.917"
            app:layout_constraintStart_toEndOf="@+id/saved_blog_archive_date"
            app:layout_constraintTop_toBottomOf="@+id/saved_blog_favorite_img" />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


