<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    app:cardCornerRadius="14dp"
    app:cardPreventCornerOverlap="true"
    app:cardElevation="20dp"
    android:background="@color/white"
    app:cardUseCompatPadding="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:paddingStart="5dp"
        android:elevation="20dp"
        android:orientation="vertical"

        >

        <ImageView
            android:id="@+id/blog_favorite_img"
            android:layout_width="359dp"
            android:layout_height="237dp"
            android:contentDescription="@string/app_name"
            android:foregroundGravity="center"
            android:paddingTop="10dp"
            android:scaleType="center"
            android:paddingRight="25dp"
            android:src="@drawable/blog_mom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/blog_archive_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/blog_favorite_img"
            android:fontFamily="@font/poppins_bold"
            android:text="Blog Title"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/blog_favorite_img"
            app:layout_constraintHorizontal_bias="0.414"
            app:layout_constraintStart_toStartOf="@+id/blog_favorite_img"
            app:layout_constraintTop_toBottomOf="@+id/product_archive_quantity" />

        <TextView
            android:id="@+id/blog_archive_desc"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_below="@id/blog_archive_title"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/blog_favorite_img"
            android:drawablePadding="2dp"
            android:fontFamily="@font/poppins_regular"
            android:text="blod_content"
            android:textSize="12sp"
            android:paddingBottom="5dp"
            android:paddingStart="6dp"
            app:layout_constraintEnd_toEndOf="@+id/blog_favorite_img"
            app:layout_constraintHorizontal_bias="0.678"
            app:layout_constraintStart_toStartOf="@+id/blog_favorite_img"
            app:layout_constraintTop_toBottomOf="@+id/blog_archive_title"
            tools:ignore="SmallSp" />


        <TextView
            android:id="@+id/blog_archive_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="4dp"
            android:drawablePadding="2dp"
            android:fontFamily="@font/poppins_regular"
            android:text="July 03, 2022"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/product_archive_quantity"
            app:layout_constraintStart_toStartOf="@+id/blog_favorite_img"
            app:layout_constraintTop_toBottomOf="@+id/blog_favorite_img"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/blog_archive_autherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Author Name"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/product_archive_quantity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/product_archive_quantity"
            app:layout_constraintTop_toTopOf="@+id/product_archive_quantity"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/product_archive_quantity"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="124dp"
            android:layout_marginBottom="164dp"
            android:drawablePadding="2dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Published By: "
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blog_favorite_img"
            app:layout_constraintVertical_bias="0.037" />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


