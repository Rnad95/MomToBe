<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".updateExperiance_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <TextView
                android:id="@+id/page_title_update_Question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="update Question"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:textColor="#000"
                android:textSize="20sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="10dp" />


            <View
                android:layout_width="0dp"
                android:layout_height="20dp" />

            <RelativeLayout
                android:id="@+id/lyt_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/edit_text_round"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:padding="25dp"
                    app:srcCompat="@drawable/ic_photo"
                    app:tint="#cccccc" />

                <ImageView
                    android:id="@+id/Image_Question_update"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    />

            </RelativeLayout>
            <EditText
                android:id="@+id/edit_Question_name_update"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/edit_text_round"
                android:hint="Title"
                android:inputType="text"
                android:maxLength="15"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="#666666" />

            <EditText
                android:id="@+id/edit_Question_desc_update"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/edit_text_round"
                android:hint="Description"
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="#666666" />

            <Spinner
                android:id="@+id/spinner_Question_update"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btn_register_Question_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_dark"
                android:text="update Question"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>