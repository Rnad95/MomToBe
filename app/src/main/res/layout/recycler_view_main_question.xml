<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/question_cardview"
   >


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/question_image"
        android:layout_width="92dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/question" />

    <TextView
        android:id="@+id/question_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/question_image"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/question_image"
        android:text="title"
        android:textColor="@color/black"
        android:textSize="19dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/question_content"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/question_title"
        android:layout_alignBottom="@+id/question_image"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="15dp"
        android:text="question content" />

    <ImageView
        android:id="@+id/nav_btn"
        android:layout_width="44dp"
        android:layout_height="43dp"

        android:layout_alignTop="@+id/question_title"
        android:layout_alignBottom="@+id/question_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="13dp"
        android:layout_toEndOf="@+id/question_content"
        android:src="@drawable/ic_arrow" />

</RelativeLayout>


