<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    app:cardElevation="4dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="4dp"
    android:layout_marginVertical="@dimen/_2sdp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Media -->
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:scaleType="center"
            android:src="@drawable/product"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <!-- Title, secondary and supporting text -->
            <TextView
                android:id="@+id/title_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_18sdp"
                android:textAppearance="?attr/textAppearanceHeadline6"
                />
            <TextView
                android:id="@+id/description_Experiance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="This is my experiance in terms of children so I can tell you what Iam dong with this Things"
                android:fontFamily="@font/poppins_regular"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:attr/textColorSecondary"
                />

        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/_5sdp"
           android:layout_marginRight="@dimen/_5sdp"
           android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                android:drawableLeft="@drawable/ic_baseline_edit_24"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginEnd="8dp"
                android:visibility="invisible"
                android:layout_weight="1"
                android:text="Update"
                android:textColor="@color/mom_colorBlue"
                android:textSize="@dimen/_10sdp"
                 />

            <TextView
                android:layout_weight="1"
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                android:drawableLeft="@drawable/ic_arch_baseline_delete_24"
                android:gravity=""
                android:visibility="invisible"
                android:fontFamily="@font/poppins_bold"
                android:text="Delete"
                android:textColor="@color/mom_colorRed"
                android:textSize="@dimen/_10sdp"
                 />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>