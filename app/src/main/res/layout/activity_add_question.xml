<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.AddQuestionActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="50dp"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:id="@+id/page_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Question"
                    android:fontFamily="@font/poppins_bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="10dp" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="20dp" />
                <RelativeLayout
                    android:id="@+id/lyt_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:background="@drawable/edit_text_round"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:padding="25dp"
                        app:srcCompat="@drawable/ic_photo"
                        app:tint="#cccccc" />

                    <ImageView
                        android:id="@+id/Image_Question"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        />

                </RelativeLayout>

                <EditText
                    android:id="@+id/edit_Question_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:background="@drawable/edit_text_round"
                    android:hint="Title"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="text"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="#666666"
                    />

                <EditText
                    android:id="@+id/edit_Question_desc"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/edit_text_round"
                    android:hint="Description"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="#666666"
                    />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/btn_register_Question"
                    style="@style/mom_Button"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/mom_spacing_30"
                    android:background="@drawable/btn_dark"
                    android:text="Add Question"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="15dp"
                    />

            </LinearLayout>

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>